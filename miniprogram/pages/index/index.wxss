.banner{
  width: 100%;
  height: 400rpx;
  padding-bottom: 0;
}
.swiper-item{
  position: relative;
  width: 100%;
  height: 100%;

}
.bannerBgColor{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 90%;

}
.banner image{
  position: absolute;
  left: 5%;
  top: 10%;
  width: 90%;
  height: 90%;
  border-radius:4px;
}

.scroll-menu-box{
  background-color: white;
  border-radius: 10px;
  margin: 5%;
  width: 90%;
  overflow-x: scroll;
  box-sizing: border-box;
  padding-bottom: 20rpx;

}
.scroll-menu{
  /* width: 100%; */
  width: 1680rpx;
  /* height: 300rpx; */
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  

}
.scroll-menu-item{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.scroll-menu-item .scroll-menu-icon{
  width: 100rpx;
  height: 100rpx;
  background-color: bisque;
  border-radius: 18px;
  margin: 20rpx;
  text-align: center;
  line-height: 100rpx;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
}
.scroll-menu-item .menu-item-name{
  font-size: 8pt;
  color: #353535;
}
.scroll-menu-item .icon{
  width: 60rpx;
  height: 60rpx;
}
::-webkit-scrollbar{
    width: 0;
    height: 0;
    color: transparent;
}

.products{
  display: flex;
  flex-direction: column;
  width: 100%;
}
.products .product{
  display: flex;
  width: 90%;
  height: 200rpx;
  background-color: white;
  border-radius: 8rpx;
  margin: 0 auto;
  padding: 20rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}
.products .product .img{
  width: 200rpx;
  height: 200rpx;
}
.products .product .texts{
  flex: 1;
  display: flex;
  flex-direction: column;
  font-size: 8pt;
  padding-left: 10rpx;
  box-sizing: border-box;
  justify-content: space-between;
  height: 100%;
}
.products .product .texts .title{
  /* margin-bottom: 20rpx; */
}
.products .product .texts .subTitle{
  margin-top: 20rpx;
  font-weight: bold;
  font-size: 9pt;
}
.products .product .texts .progressBox{
  margin-top: 20rpx;
  display: flex;
}
.products .product .texts .progressBox .progress{
  width: 60%;
  padding-right: 20rpx;
  box-sizing: border-box;
}
.products .product .texts .bottom{
  display: flex;
  justify-content: space-between
}
.products .product .texts .bottom .price{
  color: red;
  font-size: 10pt;
}
.products .product .texts .bottom .btn-qiang{
  font-size: 8pt;
  font-weight: lighter;
  width: 150rpx;
  letter-spacing: 0;
  text-indent: 0;
  height: 40rpx;
  line-height: 40rpx;

}
.loading{
  height: 100rpx;
  width: 100vw;
  background-color: white;
}