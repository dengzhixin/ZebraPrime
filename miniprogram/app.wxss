/**app.wxss**/
@import './components/loading/loading.wxss';

@font-face {
  font-family: 'iconfont'; /* project id 1534729 */
  src: url('//at.alicdn.com/t/font_1534729_rm9nkyhnpxa.eot');
  src: url('//at.alicdn.com/t/font_1534729_rm9nkyhnpxa.eot?#iefix') format('embedded-opentype'),
         url('//at.alicdn.com/t/font_1534729_rm9nkyhnpxa.woff2') format('woff2'),
         url('//at.alicdn.com/t/font_1534729_rm9nkyhnpxa.woff') format('woff'),
         url('//at.alicdn.com/t/font_1534729_rm9nkyhnpxa.ttf') format('truetype'),
         url('//at.alicdn.com/t/font_1534729_rm9nkyhnpxa.svg#iconfont') format('svg');
}

.iconfont {
  font-family: "iconfont" !important;
  font-size: 16px;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

page {
  background-color: whitesmoke;
  min-height: 100vh;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}

.btn-submit {
  text-align: center;
  box-sizing: border-box;
  background-color: rgba(255, 0, 0, 0.8);
  font-size: 12pt;
  color: white;
  border-radius: 10rpx;
  letter-spacing: 10rpx;
  text-indent: 10rpx;
  font-weight: lighter;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
}

.table {
  display: flex;
  flex-direction: column;
  border-collapse: collapse;
  width: 100%;
  border-left: 1rpx solid rgba(0, 0, 0, 0.1);
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
}

.table .row {
  display: table-row;
  width: 100%;
}

.table .row .col {
  display: table-cell;
  border-right: 1rpx solid rgba(0, 0, 0, 0.1);
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
  padding: 8rpx;
  font-size: 10pt;
  color: rgba(0, 0, 0, 0.4)
}

.table .row .key {
  width: 40%;
}

.table .row .value {
  width: 100vw;
}

.bottomBar {
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: space-between;
  padding: 10rpx;
  box-sizing: border-box;
  align-items: center;
  background-color: white;
  box-shadow: 0 -1rpx 10rpx rgba(0, 0, 0, 0.1);
}

.layout-col {
  display: flex;
  flex-direction: column;
}

.layout-row {
  display: flex;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  color: red;
}

.productImg {
  width: 750rpx;
  height: 750rpx;
}

.productImg image {
  width: 100%;
  height: 100%;
}
